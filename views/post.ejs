<%- include('partials/header') -%>
<div class="container">
  <div class="row justify-content-center mt-5">
    <div class="col-6">
      <h2><%= post.title %></h2>
      <img class="img-fluid rounded border border-primary mb-3" src="<%= post.image%>" />
      <div class="row justify-content-between">
        <span class="border border-primary rounded mb-3">
            <section>
              <strong>Dose</strong>
              <p><%=post.dose  %> </p>

              <strong>Frquency</strong>
              <p><%=post.frequency  %> </p>

              <strong>Last Taken</strong>
              <p><%=post.lastTaken  %> </p>
              
              <strong>Next Dose</strong>
              <p><%=post.nextDose  %> </p>
            </section>
        </span>

        <%if(post.user == user.id){ %>
          <form
            action="/post/deletePost/<%= post.id %>?_method=DELETE"
            method="POST"
            class="col-3"
          >
            <button class="btn btn-primary fa fa-trash" type="submit"></button>
          </form>
        <%}%>
      </div>
    </div>

    <div class="col-auto mt-5">
      <a class="btn btn-primary" href="/edit-post">Update Med Info</a>
      <a class="btn btn-primary" href="/profile">Return to Profile</a>
      <a class="btn btn-primary" href="/cabinet">Return to Cabinet</a>
    </div>
  </div>
</div>

<%- include('partials/footer') -%>
